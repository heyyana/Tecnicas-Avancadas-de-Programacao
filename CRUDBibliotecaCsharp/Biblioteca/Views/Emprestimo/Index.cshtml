@{
    @model IEnumerable<EmprestimoModel>

    <div class="container">
      <div class="d-flex justify-content-between align-items-center mb-5">
          <h1>Empréstimos</h1>
          <a class="btn btn-success mx-2" asp-controller="Empretimo" asp-action="Cadastrar">Cadastrar novo empréstimo</a>
      </div>
    </div>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Livro</th>
                <th scope="col">Data</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null )
            {
                @foreach (var emprestimo in Model)
                {
                    <tr>
                        <th scope="row">@emprestimo.Recebedor</th>
                        <td>@emprestimo.Fornecedor</td>
                        <td>@emprestimo.LivroEmprestado</td>
                        <td>@emprestimo.Data</td>
                        <td>
                            <a asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Emprestimo" asp-action="Excluir" asp-route-itemid="@emprestimo.Id" class="btn btn-warning mx-2">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
